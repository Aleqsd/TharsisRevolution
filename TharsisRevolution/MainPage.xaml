<Page
    x:Class="TharsisRevolution.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TharsisRevolution"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <RelativePanel HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="1920" Height="1080" >
        <RelativePanel.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/Space.png"/>
        </RelativePanel.Background>

        <Border x:Name="block_PvShip" BorderBrush="Gray" BorderThickness="5" RenderTransformOrigin="0.5,0.5"  UseLayoutRounding="False" d:LayoutRounding="Auto" Margin="-123,-108,123,108">
            <Border.RenderTransform>
                <CompositeTransform SkewX="50"/>
            </Border.RenderTransform>
            <Rectangle Fill="Black" Width="500" Height="200" RenderTransformOrigin="1,1"/>
        </Border>
        <ProgressBar x:Name="pg_PvShip" HorizontalAlignment="Left" Height="40" Margin="57,48,-57,-38" VerticalAlignment="Top" Width="282" Maximum="10" SmallChange="1" Value="5" RenderTransformOrigin="0.733,1.347" Foreground="White" BorderBrush="Black" Background="#33FFFFFF"/>

        <Border x:Name="block_Semaines" BorderBrush="Gray" BorderThickness="5" Margin="705,-122,-705,122" RenderTransformOrigin="0.5,0.5">
            <Rectangle Fill="Black" Width="500" Height="200"/>
        </Border>
        <TextBlock x:Name="lbl_TimeSemaine" Foreground="White" Height="40" Text="10"  Width="40"  RelativePanel.AlignHorizontalCenterWithPanel="True" FontSize="30" FontFamily="Showcard Gothic"  RelativePanel.LeftOf="lbl_txtSemaine" Margin="37,6,-37,-6"/>
        <Slider x:Name="slider_Semaines" Height="50" VerticalAlignment="Top" Width="302" RelativePanel.AlignHorizontalCenterWithPanel="True" LargeChange="1" BorderThickness="0" Margin="18,42,-18,-42" Foreground="White" Background="White" Maximum="10" ValueChanged="slider_TimeSemaine_ValueChanged" IsDirectionReversed="True" Value="10"/>
        <TextBlock x:Name="lbl_txtSemaine" Foreground="White" Height="40" Text="semaines avant Mars"  Width="350"  RelativePanel.AlignHorizontalCenterWithPanel="True" FontSize="30" FontFamily="Showcard Gothic" Margin="42,6,-42,-6"/>
      
        <!--Grid x:Name="Grid_Ship" Margin="0,-1,0,1" Width="1000" Height="600" RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.AlignHorizontalCenterWithPanel="True" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
